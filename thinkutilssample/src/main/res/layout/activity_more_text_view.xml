<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:thinkutils="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_more_text_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thinkman.thinkutilssample.MoreTextViewActivity">

    <com.thinkman.thinkutils.view.MoreTextView
        android:id="@+id/tv_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        thinkutils:expand="false"
        thinkutils:maxLine="5"
        thinkutils:mytextColor="#767676"
        thinkutils:mytextSize="15sp"
        thinkutils:text="@string/text" />

</RelativeLayout>
