<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="Label"
        android:textColor="@color/text_dark_333"
        android:textSize="@dimen/text_size_small" />

    <com.zcw.togglebutton.ToggleButton
        android:id="@+id/tb_on_off"
        android:layout_width="54dp"
        android:layout_height="30dp"
        toggle:tbOffColor="@android:color/darker_gray"
        toggle:tbOffBorderColor="@android:color/darker_gray"
        toggle:tbBorderWidth="2dp" />

    <!--
            toggle:tbOnColor="#f00"
        toggle:tbOffColor="#ddd"
        toggle:tbSpotColor="#00f"

    -->

    <ImageView
        android:id="@+id/iconRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/dimen6"
        android:scaleType="center"
        android:src="@drawable/ic_navi_right" />
</LinearLayout>